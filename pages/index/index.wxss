
.container {
  position: relative
}
swiper{
  height: 165px;
  width: 100%;
}
wx-swiper .wx-swiper-dot {
background: #808080;
}
wx-swiper .wx-swiper-dot-active {
    background-color:#ffffff ;
}
.me {
  position: absolute;
  top:104px;
  right: 16px;
}
.show-box {
  padding: 16px
}
.show-item {
  padding-bottom: 16px;
  width: 100%;
  display: flex;
  justify-content: left;
}
.head-portrait {
  width: 60px;
  height: 40px;
  border-radius: 4px;
}
.show-detail{
  line-height: 1.5;
  margin-left: 8px;
}
.name{
  font-size: 15px;
  font-weight: 600;
  color: #41454d;
  display: block;
}
.desc {
  font-size: 14px;
  color: #41454d;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}
.desc-pic {
  display: flex;
  justify-content: left;
  flex-wrap: wrap;
}
.picture1 {
  margin-top: 8px;
  width: 172px;
  height: 172px;
}
.picture2 {
  margin: 8px 4px;
  width: 134px;
  height: 134px;
}
.picture3 {
  margin: 8px 4px;
  width: 88px;
  height: 88px;
}
.picture4 {
  margin: 4px 4px;
  width: 134px;
  height: 134px;
}
.picture7 {
  margin: 8px 4px;
  width: 88px;
  height: 88px;
}
.enjoy {
  width: 100%;
  height: 20px;
  font-size: 12px;
  line-height: 20px;
  color: #80858c;
  display: flex;
  justify-content: left;
  margin-top: 8px;
}
.enjoy image {
  width: 17px;
  height: 17px;
  margin-right: 10px;
}
.enjoy text {
  margin-right: 40px;
}
.critic-essayist {
  font-size: 14px;
  margin-top: 8px;
}
.critic-item {
  display: block;
  line-height: 1.5;
}
.friend-name {
  color: #5bafff;
}
.friend-comment {
  color: #41454d;
}
.check-comment{
  font-size: 12px;
  color: #acb1b7;
  margin-top: 8px;
}

